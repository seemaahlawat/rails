<%= link_to("<< Back to list", {:action => 'index', :class => 'back-link'}) %>
<div class="sections show">
	<h2>Show Section</h2>

	<table summary="Section detail view">
		<tr>
			<th>Name</th>
			<td><%= @sections.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @sections.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @sections.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @sections.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @sections.updated_at %></td>
		</tr>
	</table>
</div>
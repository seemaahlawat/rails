<%= link_to("<< Move to Subjects", {:controller => 'subjects' }, :class => 'back-link') %><br>
&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to("Move to Sections >>", {:controller => 'sections' }, :class => 'back-link') %>
<div class="pages index">
	<h2>Pages</h2>

	<%= link_to("Add new Page", {:action => 'new'}, :class => 'action new') %>
	<table class="listing">
	<tr class="header">
		<th>Name</th>
		<th>Permalink</th>
		<th>Visible</th>
		<th>Position</th>
		<th>Action</th>
	</tr>
	<% @pages.each do |page| %>
	<tr>
		<td><%= page.name %></td>
		<td><%= page.permalink %></td>
		<td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
		<td class="center"><%= page.position%></td>
		<td class="actions">
			<%= link_to("Show", {:action => 'show', :id => page.id}, :class => 'action show')%>
			<%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit')%>
			<%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete')%>
		</td>
	</tr>
	<% end %>
	</table>
</div>

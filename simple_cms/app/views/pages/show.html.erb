<%= link_to("<< Back to list", {:action => 'index'}, :class => 'back-link') %>
<div class="pages show">
	<h2>Show Subject</h2>

	<table summary="Page detail view">
		<tr>
			<th>Name</th>
			<td><%= @pages.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @pages.position %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= @pages.permalink %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @pages.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @pages.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @pages.updated_at %></td>
		</tr>
	</table>
</div>